
@{
    ViewBag.Title = "Lista de Empleados con EF";
}

<h2>@ViewBag.Title</h2>
<br />
<br />
@if (Model != null)
{
    using (Html.BeginForm())
    {
        <select id="selAreas" onchange="SetArea(this.value);">
            <option value="0">Selecciona Empelado</option>
            @foreach (MVCEntityFramework.Models.Empleados empleados in Model)
            {
                <option value="@empleados.IdArea">@empleados.Nombre</option>
            }
        </select>

        <input type="submit" value="Buscar Area" />
        <input type="hidden" id="IdArea" name="IdArea" value="0" />
        <br />
        <br />
        if (ViewBag.Area != null)
        {
            <label>@ViewBag.Area</label>
        }
    }

}

<script>
    function SetArea(id) {
        document.getElementById('IdArea').value = id;
    }
</script>